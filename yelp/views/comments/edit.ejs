<%- include("../partials/header") %>
        <div class="row">
            <h1 class="col-12" style="text-align: center;">Edit Your Remarks</h1>
            <div style="width: 30%; margin: 15px auto;">
                <form class="col-12" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                    <div class="form-group">
                        <input class="form-control" name="comment[text]" type="text" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </div>                    
                </form>
                <a class="col-12" href="/campgrounds">Go Back</a>
            </div>
        </div>
<%- include("../partials/footer") %>