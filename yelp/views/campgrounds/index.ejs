<%- include("../partials/header") %>
        <header class="jumbotron">
            <div class="container">
                <h1>The Best of Our Offers</h1>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Camps</a>
            </div>
        </header>

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
                <div class="pic_in_row col-lg-4 col-md-6 col-sm-12">
                    <div class="container">
                        <div class="thumbnail">
                            <img class="img-fluid img-thumbnail" src="<%= campground.image %>">
                            <div class="caption">
                                <h4><%= campground.location %></h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>  
<%- include("../partials/footer") %>