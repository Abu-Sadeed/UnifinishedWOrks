<%- include("../partials/header") %>
        <div class="row">
            <h1 class="col-12" style="text-align: center;">Post A New Location</h1>
            <div style="width: 30%; margin: 15px auto;">
                <form class="col-12" action="/campgrounds" method="post">
                    <div class="form-group">
                        <input class="form-control" name="location" type="text" placeholder="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image_url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="price" min="0.00" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </div>                    
                </form>
                <a class="col-12" href="/campgrounds">Go Back</a>
            </div>
        </div>
<%- include("../partials/footer") %>